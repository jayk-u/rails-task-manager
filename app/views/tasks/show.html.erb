<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p>Completed ? <%= @task.completed? %></p>

<%= link_to "Edit task", task_edit_path %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>

<%= link_to "Return to Task list", tasks_path %>
